        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Escolha qual calculadora deseja utilizar"
        android:textColor="#101010"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_calcbolso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_calcbolso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de Bolso"
        app:layout_constraintBottom_toTopOf="@+id/btn_calcconver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738" />

    <Button
        android:id="@+id/btn_calcconver"
